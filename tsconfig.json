{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"typeRoots": [
		  "node_modules/@types"
		],
		"baseUrl": "./",
		"paths": {
		  "@/*": [
			"src/*",
		  ],
		},
		"lib": [
		  "es2018",
		  "dom"
		],
		"sourceMap": true
	  },
	"include": [
		"src/**/*",
		"types/**/*"
	]
}
